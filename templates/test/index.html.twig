{% extends 'base.html.twig' %}

{% block title %}Test index{% endblock %}

{% block body %}
    <h1>Test index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomTest</th>
                <th>DescriptionTest</th>
                <th>PrixTest</th>
                <th>StockTest</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for test in tests %}
            <tr>
                <td>{{ test.id }}</td>
                <td>{{ test.nomTest }}</td>
                <td>{{ test.descriptionTest }}</td>
                <td>{{ test.prixTest }}</td>
                <td>{{ test.stockTest ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_test_show', {'id': test.id}) }}">show</a>
                    <a href="{{ path('app_test_edit', {'id': test.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_test_new') }}">Create new</a>
{% endblock %}
